include ../layouts/_mixins

h1.title.content-title Prices
p.content-desc The following information s considered when charging the order:
ul.content-features
	li.content-features__item
		p.content-features__legend.time Your duedate
	li.content-features__item
		p.content-features__legend.academic Academic level
	li.content-features__item
		p.content-features__legend.pages Pages/words

form.price-form.form
	.form-currency
		p.form-legend.form-currency__legend Select currency
		.form-field.form-currency__slider
			button.form-currency__item.currency--active(data-currency='usd') Usd
				input.form-currency__field.visually-hidden(type='radio' name='usd' id='usd' checked='true')
			button.form-currency__item(data-currency='eur') Eur
				input.form-currency__field.visually-hidden(type='radio' name='eur' id='eur')
			button.form-currency__item(data-currency='cad') Cad
				input.form-currency__field.visually-hidden(type='radio' name='cad' id='cad')
			button.form-currency__item(data-currency='gbr') Gbr
				input.form-currency__field.visually-hidden(type='radio' name='gbr' id='gbr')
			button.form-currency__item(data-currency='aud') Aud
				input.form-currency__field.visually-hidden(type='radio' name='aud' id='aud')
	.form-services
		p.form-legend.form-services__legend Type of services
		input.form-field.form-services__field(type='text' name='Type-of-services' placeholder='Type of services' value='Resume/CV services')
	.form-level
		p.form-legend.form-level__title Type level
		.form-field.form-level__field
			select#level-select(name='type-level' required='true')
				-
					let options =[
						{name: 'Entry'},
						{name: 'Some option1'},
						{name: 'Some option2'},
						{name: 'Some option3'},
					]
				each option in options
					option(value= option.name)= option.name

